<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/reloaded_version_title">

    <!-- ReloadedOS logo -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="reloaded_logo"
        android:layout="@layout/reloaded_logo"
        android:selectable="false"/>

    <!-- ReloadedOS version -->
    <Preference
        android:key="reloaded_os_version"
        android:title="@string/reloaded_version_title"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:searchable="false"
        settings:controller="com.android.settings.deviceinfo.ReloadedVersionDetailPreferenceController"/>

    <!-- Build type -->
    <Preference
        android:key="reloaded_build_type"
        android:title="@string/reloaded_build_type"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>
    
    <!-- Build variant -->
    <Preference
        android:key="reloaded_build_variant"
        android:title="@string/reloaded_build_variant"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- CLO revision -->
    <Preference
        android:key="reloaded_clo_revision"
        android:title="@string/reloaded_clo_revision"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- Device name -->
    <Preference
        android:key="reloaded_device"
        android:title="@string/reloaded_device"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- Device maintainer -->
    <Preference
        android:key="reloaded_device_maintainer"
        android:title="@string/reloaded_device_maintainer"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"/>

</PreferenceScreen>
